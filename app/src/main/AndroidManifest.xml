<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.cs442.group5.feedback"
          android:installLocation="preferExternal">

    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name="com.cs442.group5.feedback.utils.Libs"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.cs442.group5.feedback.SplashScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:noHistory="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "http://recipe-app.com/recipe"
                adb shell am start -a android.intent.action.VIEW \-d "http://ec2-52-91-230-7.compute-1.amazonaws.com/store/1" com.cs442.group5.feedback
                 http://ec2-52-91-230-7.compute-1.amazonaws.com/recipe/1
                 -->
                <data android:scheme="http"
                      android:host="@string/host"
                      android:pathPrefix="@string/path" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cs442.group5.feedback.DashBoardActivity"
            android:label="@string/title_activity_dash_board"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name="com.cs442.group5.feedback.NewFormActivity">
        </activity>
        <activity
            android:name="com.cs442.group5.feedback.NewStoreActivity"
            android:label="New Store"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name="com.cs442.group5.feedback.TermsNConditions"
            android:label="@string/title_activity_terms_nconditions"
            android:parentActivityName="com.cs442.group5.feedback.DashBoardActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name="com.cs442.group5.feedback.MyProfileActivity"
            android:parentActivityName="com.cs442.group5.feedback.DashBoardActivity"/>
        <activity
            android:name="com.cs442.group5.feedback.StoreActivity"
            android:parentActivityName="com.cs442.group5.feedback.DashBoardActivity"/>
        <activity
            android:name="com.cs442.group5.feedback.SignUpActivity"
            android:parentActivityName="com.cs442.group5.feedback.LoginActivity"/>
        <activity android:name="com.cs442.group5.feedback.FormPreviewActivity"/>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="c56305f7af11ae5fc68dad35bcd9771606689805"/>

        <!--
             The API key for Google Maps-based APIs is defined as a string resource.
             (See the file "res/values/google_maps_api.xml").
             Note that the API key is linked to the encryption key used to sign the APK.
             You need a different API key for each encryption key, including the release key that is used to
             sign the APK for publishing.
             You can define the keys for the debug and release targets in src/debug/ and src/release/. 
        -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key"/>

        <activity
            android:name="com.cs442.group5.feedback.MyStoreActivity"
            android:label="@string/title_activity_my_store"
            android:parentActivityName="com.cs442.group5.feedback.DashBoardActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name="com.cs442.group5.feedback.DirectionsActivity"
            android:label="@string/title_activity_directions"
            android:theme="@style/AppTheme">
        </activity>

        <service android:name="com.cs442.group5.feedback.notification.MyFirebaseNotification">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <activity
            android:name="com.cs442.group5.feedback.MoreReviewsActivity"
            android:label="@string/title_activity_more_reviews"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name="com.cs442.group5.feedback.LoginActivity"
            android:label="@string/title_activity_more_reviews"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name="com.cs442.group5.feedback.IntroActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_intro"
            android:parentActivityName="com.cs442.group5.feedback.LoginActivity"
            android:theme="@style/Theme.Intro">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cs442.group5.feedback.LoginActivity"/>
        </activity>
        <activity
            android:name="com.cs442.group5.feedback.MyStorePageActivity"
            android:parentActivityName="com.cs442.group5.feedback.MyStoreActivity">
        </activity>

        <service
            android:name="com.cs442.group5.feedback.notification.MyFirebaseInstanceIDService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name="com.cs442.group5.feedback.service.ReviewIntentService"
            android:exported="false">
        </service>
        <service
            android:name="com.cs442.group5.feedback.service.StoreIntentService"
            android:exported="false">
        </service>
        <service
            android:name="com.cs442.group5.feedback.service.UserIntentService"
            android:exported="false">
        </service>

        <activity
            android:name="com.cs442.group5.feedback.BookMarkActivity"
            android:label="@string/title_activity_book_mark"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>